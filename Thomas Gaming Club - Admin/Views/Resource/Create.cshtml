@model Thomas_Gaming_Club.Models.VideoGame

@{
    ViewBag.Title = "Add a Game";
}
@section Styles {
    <link href="@Url.Content("~/Content/Games.css")" rel="stylesheet" type="text/css" />
}

<div class="main-content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>Add a New Game to the Collection</h2>

        <div class="accent-bar"></div>

        <div class="game-container">

            <div class="game-info" id="edit-form">
                <div class="form-edit">
                    @Html.LabelFor(model => model.Title)
                    <div class="form-edit-input">
                        @Html.EditorFor(model => model.Title)
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-edit">
                    @Html.LabelFor(model => model.Year)
                    <div class="form-edit-input">
                        @Html.EditorFor(model => model.Year)
                        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-edit">
                    @Html.LabelFor(model => model.Publisher)
                    <div class="form-edit-input">
                        @Html.EditorFor(model => model.Publisher)
                        @Html.ValidationMessageFor(model => model.Publisher, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-edit">
                    @Html.LabelFor(model => model.Developer)
                    <div class="form-edit-input">
                        @Html.EditorFor(model => model.Developer)
                        @Html.ValidationMessageFor(model => model.Developer, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-edit">
                    @Html.LabelFor(model => model.Platform)
                    <div class="form-edit-input">
                        @Html.EditorFor(model => model.Platform)
                        @Html.ValidationMessageFor(model => model.Platform, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-edit">
                    <div class="col-md-offset-2 form-edit-input">
                        <input type="submit" value="Create" class="button" />
                    </div>
                </div>
                <div id="button-container">
                    @Html.ActionLink("Return to Resource Manager", "ResourceManager", "Resource", new { @class = "button" })
                </div>
            </div>
        </div>

    }

</div>
