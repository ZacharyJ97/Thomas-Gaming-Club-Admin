@{
    ViewBag.Title = "PC Games";
}
@section Styles {
    <link href="@Url.Content("~/Content/Games.css")" rel="stylesheet" type="text/css" />
}

<div class="main-content">
    <h2>Our PC Gaming Resources come from the Esports Division of Thomas College</h2>
    <div class="accent-bar"></div>
    @{
        foreach (var game in ViewBag.VideoGames)
        {
            string gameImage = game.Title + ".jpg";

            <div class="game-container">
                <div class="game-img">
                    <img src="~/Images-Games/@gameImage" />
                </div>

                <div class="game-info">
                    <h3>@game.Title</h3>
                    <ul>
                        <li>Year Released: @game.Year</li>
                        <li>Publisher: @game.Publisher</li>
                        <li>Developer: @game.Developer</li>
                    </ul>
                </div>
            </div>
            <div class="game-accent-bar"></div>

        }
    }

</div>