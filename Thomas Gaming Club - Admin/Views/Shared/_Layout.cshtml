@section Styles {
    <link href="@Url.Content("~/Content/generalContent.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/navbar.css")" rel="stylesheet" type="text/css" />
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Thomas Gaming Club</title>
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif+JP|Noto+Serif+KR" rel="stylesheet">
    @Styles.Render("~/Content/generalContent.css")
    @Styles.Render("~/Content/navbar.css")
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">

        <h1>@Html.ActionLink("Thomas College Gaming Club", "Index", "Home")</h1>

        <ul>
            <li>@Html.ActionLink("Events", "Events", "Home")</li>
            <li>@Html.ActionLink("Extra Life", "ExtraLife", "Home")</li>
            <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
            <li>@Html.ActionLink("About Us", "About", "Home") </li>
            <li>@Html.ActionLink("Contact Us", "Contact", "Home") </li>
            @Html.Partial("_LoginPartial")
        </ul>

    </div>
    @RenderBody()

    <div class="footer-bar">
        <footer>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Events", "Events", "Home")</li>
                <li>@Html.ActionLink("Extra Life", "ExtraLife", "Home")</li>
                <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                <li>@Html.ActionLink("About Us", "About", "Home") </li>
                <li>@Html.ActionLink("Contact Us", "Contact", "Home") </li>
                <li>@Html.ActionLink("Officer's Zone", "AllContacts", "Home") </li>
            </ul>
            <p class="footer-text">Check out our community at <a href="http://thomas.edu">Thomas College!</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
